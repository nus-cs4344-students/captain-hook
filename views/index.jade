doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")

    link(rel="stylesheet", type="text/css", href="/dist/semantic.css")
    link(rel="stylesheet", type="text/css", href="/stylesheets/captainhook.css")
    script(type='text/javascript', src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.js")
    script(type='text/javascript', src="http://cdnjs.cloudflare.com/ajax/libs/jquery.address/1.6/jquery.address.min.js")
    script(type='text/javascript', src="/dist/semantic.js")

    script(type='text/javascript', src="/javascripts/LobbyClient.js")

  body(id='home')
    content
        div(class='ui inverted masthead segment')
          div(class='ui page grid')
            div(class='column')
              div(class='ui inverted yellow menu')
                div(class='header item') Captain Hook

              div(class='ui padded grid')
                div(class='three column row')
                  div(class='red column' style='min-height:40rem;max-height:40rem')
                    h2(class='ui centered header') Players List
                    h3(class='ui dividing header')
                    div(class='ui divided list' style='overflow:auto;max-height:32rem')
                      // create player item
                      div(cass='item')
                        img(class='ui avatar image' src='assets/daniel.jpg')
                        div(class='content')
                          div(class='header') Player 1

                  div(class='green column' style='min-height:40rem;max-height:40rem')
                    h2(class='ui centered header') Group Chat
                    h3(class='ui dividing header')
                    div(class="field")
                      // append text message
                      textarea(id='chatarea' style='min-height:28rem;max-height:28rem;min-width:23rem;max-width:23rem')
                    h3(class='ui dividing header')

                    div(class='ui center aligned grid')
                      div(class='eleven wide column')
                        div(class='column')
                          div(class='ui labeled input' style='min-height:1rem;max-height:1rem;font-size:0.8rem')
                            div(class='ui label').
                              Message:
                            input(placeholder='type your message ...' type='text')
                      div(class='five wide column')
                        div(class='centered column')
                          // submit text message
                          div(class="ui submit button" style='min-height:2.1rem;max-height:2.1rem;font-size:0.8rem' onclick="appendText()") Submit

                  div(class='teal column' style='min-height:40rem;max-height:40rem')
                    h2(class='ui centered header') Room List
                    h3(class='ui dividing header')
                    div(class='ui list' style='overflow:auto;max-height:32rem')
                      // add game room item
                      div(cass='item')
                        div(class="ui labeled icon blue button")
                          i(class="game icon")
                          div(class="detail") Game Room

    content
        div(class="ui vertical feature segment")
          div(class="ui centered page grid")
            div(class="fourteen wide column")
              div(class="ui four column center aligned stackable divided grid")

                div(class='column')
                  div(class='ui card')
                    img(src='assets/team/1.jpeg')
                    div(class='content')
                      a(class='header') Farhan
                    div(class='meta')
                      span(class='date') CS4344 14/15 Semester 2
                    div(class='description').
                      I like CS4344.

                div(class='column')
                  div(class='ui card')
                    img(src='assets/team/2.jpeg')
                    div(class='content')
                      a(class='header') Shi Yu
                    div(class='meta')
                      span(class='date') CS4344 14/15 Semester 2
                    div(class='description').
                      I like CS4344.

                div(class='column')
                  div(class='ui card')
                    img(src='assets/team/3.jpeg')
                    div(class='content')
                      a(class='header') Wu Long
                    div(class='meta')
                      span(class='date') CS4344 14/15 Semester 2
                    div(class='description').
                      I like CS4344.

                div(class='column')
                  div(class='ui card')
                    img(src='assets/team/4.jpeg')
                    div(class='content')
                      a(class='header') Xiao Jie
                    div(class='meta')
                      span(class='date') CS4344 14/15 Semester 2
                    div(class='description').
                      I like CS4344.


include ./foot.jade
